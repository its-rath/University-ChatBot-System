# ===================================
# APPLICATION CONFIGURATION
# ===================================
NODE_ENV=development
PORT=3000
APP_NAME=University Chatbot

# ===================================
# DATABASE CONFIGURATION (MySQL)
# ===================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=chatbot_user
DB_PASSWORD=your_secure_password_here
DB_NAME=university_chatbot
DB_CONNECTION_LIMIT=10

# ===================================
# REDIS CONFIGURATION (Caching)
# ===================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# ===================================
# NLP CONFIGURATION
# ===================================
NLP_MODEL_PATH=./nlp/models/intent_classifier
NLP_CONFIDENCE_THRESHOLD=0.75
NLP_MAX_SEQUENCE_LENGTH=50

# ===================================
# API CONFIGURATION
# ===================================
API_PREFIX=/api
API_VERSION=v1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===================================
# SECURITY
# ===================================
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10
CORS_ORIGIN=http://localhost:3000

# ===================================
# LOGGING
# ===================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# ===================================
# PERFORMANCE MONITORING
# ===================================
ENABLE_QUERY_LOGGING=true
SLOW_QUERY_THRESHOLD=1000
ENABLE_METRICS=true

# ===================================
# DOCKER CONFIGURATION
# ===================================
DOCKER_DB_HOST=mysql
DOCKER_REDIS_HOST=redis

# ===================================
# CHATBOT SETTINGS
# ===================================
DEFAULT_LANGUAGE=en
MAX_CONVERSATION_HISTORY=10
RESPONSE_TIMEOUT=5000
FALLBACK_ENABLED=true
FALLBACK_MESSAGE=I'm sorry, I didn't understand that. Could you please rephrase your question?

# ===================================
# ANALYTICS
# ===================================
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90
ACCURACY_TARGET=0.85
